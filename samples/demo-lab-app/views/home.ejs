<div class="container h-100">
    <div class="d-flex align-items-center justify-content-center">
        <div class="row position-absolute bottom-50">
            <div class="col-xs-12">
                <div class="text-center">
                    <form class="conn" method="post" action='/request-proof'>
                        <button type="submit" class="btn btn-primary btn-lg green_btn me-4">
                            Connect to a User
                        </button>
                    </form>
                    <form class="mt-5" method="GET" action='/send-test-results'>
                        <button type="submit" class="btn btn-primary btn-lg green_btn me-4">
                            Issue Test Result
                        </button>
                    </form>
                    <img class="mt-5 mb-5" id="bigpic" style="display:none;" />
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function fetchStatus() {
        fetch('../images/invitation_qr.png', {
            method: 'HEAD'
        }).then((res) => {
            if (res.ok) {
                qr()
            }
        });
    }
    window.addEventListener('load', function () {
        var fetchInterval = 5000; // 5 seconds.
        setInterval(fetchStatus, fetchInterval);
    });


    function qr(){ 
    document.getElementById('bigpic').style.display = 'block';
    document.getElementById('bigpic').style.width = '200px';
    document.getElementById('bigpic').style.height = '200px';
    document.getElementById('bigpic').style.border = '1px solid black';
    document.getElementById('bigpic').src="../images/invitation_qr.png";
    }
</script>